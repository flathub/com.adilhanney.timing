{
  "app-id": "com.adilhanney.timing.timing_flutter",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "timing_flutter",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "timing_flutter",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p TimingFlutter",
        "tar -xf TimingFlutter-Linux-Portable.tar.gz -C TimingFlutter",

        "cp -r TimingFlutter /app/",
        "chmod +x /app/TimingFlutter/timing_flutter",
        "mkdir -p /app/bin",
        "ln -s /app/TimingFlutter/timing_flutter /app/bin/timing_flutter",

        "mkdir -p /app/share/metainfo",
        "cp com.adilhanney.timing.timing_flutter.metainfo.xml /app/share/metainfo/",

        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "cp icon.svg /app/share/icons/hicolor/scalable/apps/com.adilhanney.timing.timing_flutter.svg",

        "mkdir -p /app/share/applications",
        "cp com.adilhanney.timing.timing_flutter.desktop /app/share/applications/",

        "mkdir -p /app/share/appdata",
        "cp com.adilhanney.timing.timing_flutter.metainfo.xml /app/share/appdata/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.4/flatpak/com.adilhanney.timing.timing_flutter.metainfo.xml",
          "sha256": "e1737bd880c0ebada285087c80bc110a259e5918b1eef6c94f00e2eeaaf96cf7"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.4/flatpak/com.adilhanney.timing.timing_flutter.desktop",
          "sha256": "78a813db38517e582ec02d68e9ad4dfb75e1066b053a2fb2b43062fe3cd6062b"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.4/assets/icon/icon.svg",
          "sha256": "800accb41aa49c0bb63b5ed756589e1002df07e20233b2530e7f7ed86e5acd0a"
        },
        {
          "type": "file",
          "url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.4/TimingFlutter-Linux-Portable.tar.gz",
          "sha256": "2ee30820fe68c9d62c24aa22665741a2e5b50e8f6e1a0413d62b2d338f2d3d1a"
        }
      ]
    }
  ]
}
