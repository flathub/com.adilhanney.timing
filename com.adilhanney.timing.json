{
	"app-id": "com.adilhanney.timing",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "timing_flutter",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri"
	],
	"modules": [
		{
			"name": "timing_flutter",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf TimingFlutter_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/timing_flutter /app/bin/timing_flutter"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.15/TimingFlutter_v1.0.15_Linux_x86_64.tar.gz",
					"sha256": "ba808e4c17c7f5c3a8458e3f843de7954902cbd0bfb2e62dc7fe07044a42b6cf",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingFlutter_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.15/TimingFlutter_v1.0.15_Linux_arm64.tar.gz",
					"sha256": "bf48cad04c58169487773e84fe781ad279352a2d3e5c0dd634092e1f52443373",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingFlutter_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
