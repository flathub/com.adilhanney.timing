{
	"app-id": "com.adilhanney.timing",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "timing_flutter",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri"
	],
	"modules": [
		{
			"name": "timing_flutter",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf TimingTrainer_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/timing_flutter /app/bin/timing_flutter"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.17/TimingTrainer_v1.0.17_Linux_x86_64.tar.gz",
					"sha256": "a13b9a6a81dd8be71ca507596b807e68cdafbf1238fc79411ea70ff47b3ec6e8",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingTrainer_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.17/TimingTrainer_v1.0.17_Linux_arm64.tar.gz",
