{
	"app-id": "com.adilhanney.timing",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "timing_flutter",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri"
	],
	"modules": [
		{
			"name": "timing_flutter",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf TimingTrainer_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/timing_flutter /app/bin/timing_flutter"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.16/TimingTrainer_v1.0.16_Linux_x86_64.tar.gz",
					"sha256": "be44abb7a717c4dc4746e8b71de457d2bc1a082d6febf615579499a6269c1000",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingTrainer_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.16/TimingTrainer_v1.0.16_Linux_arm64.tar.gz",
					"sha256": "ff3672680cd93111299973735a897f822091f0885a3d87bf4c2f60784915ec55",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingTrainer_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
