{
  "app-id": "com.adilhanney.timing",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "timing_flutter",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "timing_flutter",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p TimingFlutter",
        "tar -xf TimingFlutter-Linux-Portable.tar.gz -C TimingFlutter",

        "cp -r TimingFlutter /app/",
        "chmod +x /app/TimingFlutter/timing_flutter",
        "mkdir -p /app/bin",
        "ln -s /app/TimingFlutter/timing_flutter /app/bin/timing_flutter",

        "install -Dm644 com.adilhanney.timing.metainfo.xml -t /app/share/metainfo/",

        "install -Dm644 icon.svg /app/share/icons/hicolor/scalable/apps/com.adilhanney.timing.svg",

        "install -Dm644 com.adilhanney.timing.desktop -t /app/share/applications/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.10/flatpak/com.adilhanney.timing.metainfo.xml",
          "sha256": "56048fb43c37cd8721385c852905955d8814643624b4431f58ec62c680a10ad6"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.10/flatpak/com.adilhanney.timing.desktop",
          "sha256": "0669f18a5eb3edb5c992b022bf2821b0821c9e958dca9610695ef3a4dc3e3812"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.10/assets/icon/icon.svg",
          "sha256": "800accb41aa49c0bb63b5ed756589e1002df07e20233b2530e7f7ed86e5acd0a"
        },
        {
          "type": "file",
          "url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.10/TimingFlutter-Linux-Portable.tar.gz",
          "sha256": "30af5173818be3d069dbaa5f50933abb0e765e6907c8610489013cc275f2faa5"
        }
      ]
    }
  ]
}
