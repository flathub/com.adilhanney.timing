{
  "app-id": "com.adilhanney.timing",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "timing_flutter",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "timing_flutter",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p TimingFlutter",
        "tar -xf TimingFlutter-Linux-Portable.tar.gz -C TimingFlutter",

        "cp -r TimingFlutter /app/",
        "chmod +x /app/TimingFlutter/timing_flutter",
        "mkdir -p /app/bin",
        "ln -s /app/TimingFlutter/timing_flutter /app/bin/timing_flutter",

        "install -Dm644 com.adilhanney.timing.metainfo.xml -t /app/share/metainfo/",

        "install -Dm644 icon.svg /app/share/icons/hicolor/scalable/apps/com.adilhanney.timing.svg",

        "install -Dm644 com.adilhanney.timing.desktop -t /app/share/applications/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.8/flatpak/com.adilhanney.timing.metainfo.xml",
          "sha256": "a590bae8451405a3caff7e2ff93d80751cff6efc249853c1a7b0cdc9e0f13980"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.8/flatpak/com.adilhanney.timing.desktop",
          "sha256": "273958f775499bb0061904713cca87dc9800e0c5145fd77f5641629c821963ce"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/adil192/timing_flutter/v1.0.8/assets/icon/icon.svg",
          "sha256": "800accb41aa49c0bb63b5ed756589e1002df07e20233b2530e7f7ed86e5acd0a"
        },
        {
          "type": "file",
          "url": "https://github.com/adil192/timing_flutter/releases/download/v1.0.8/TimingFlutter-Linux-Portable.tar.gz",
          "sha256": "bf8b55af6508e17a5f7be96b44a96bb592cbcf01d7db78fee83cde8172669550"
        }
      ]
    }
  ]
}
