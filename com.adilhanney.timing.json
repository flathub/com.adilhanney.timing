						"type": "json",
						"url": "https://api.github.com/repos/adil192/timing_flutter/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"TimingTrainer_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
